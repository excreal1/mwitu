sudo pacman -S hyprland kitty

cd /opt 

sudo git clone https://aur.archlinux.org/yay-git.git

sudo chown -R merlin:merlin yay-git/

cd yay-git

makepkg -si

yay -Suy

cd /opt 

sudo git clone https://github.com/SolDoesTech/hyprland.git

